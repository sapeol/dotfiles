[core]
    editor = vim
    pager = delta
    excludesfile = ~/.gitignore_global

[commit]
    template = ~/dotfiles/git/commit-template.txt

[delta]
    navigate = true
    side-by-side = true

[alias]
    st = status -sb
    lg = log --graph --oneline --decorate --all
    br = branch -vv
    co = checkout
    ci = commit
    amend = commit --amend --no-edit
    unstage = reset HEAD --
    last = log -1 HEAD
    wipe = !git clean -fd && git reset --hard
    visual = !gitk
